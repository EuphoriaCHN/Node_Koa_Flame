{
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "allowJs": true,
    "removeComments": true,
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "target": "es6",
    "theme": "default",
    "isolatedModules": false // 将每个文件作为单独的模块。
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "./test",
    "./gulpfile.js"
  ]
}